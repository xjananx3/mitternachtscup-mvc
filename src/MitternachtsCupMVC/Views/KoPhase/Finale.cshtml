@model FinalSpielViewModel

@{
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="KoPhase" asp-action="Index">Alle</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="KoPhase" asp-action="Achtelfinale">Achtelfinale</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="KoPhase" asp-action="Viertelfinale">Viertelfinale</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="KoPhase" asp-action="Halbfinale">Halfinale</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="KoPhase" asp-action="SpielUmPlatz3">Spiel um Platz 3</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="KoPhase" asp-action="Finale">Finale</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<h1>Finale</h1>

<!-- Page Content -->
<div class="container">

<!-- Portfolio Item Heading -->
<h1 class="my-4">
    Page Heading
    <small>Secondary Text</small>
</h1>

<!-- Portfolio Item Row -->
<div class="row">

    <div class="col-md-8">
    </div>

    <div class="col-md-4">
        <h3 class="my-3">@Model.SpielName</h3>
        <p>@Model.StartZeit</p>
        <h3 class="my-3">Daten</h3>
        <ul>
            <li>Startzeit: @Model.StartZeit</li>
            <li>Platte: @Model.Platte</li>
            <li>Team A:@Model.TeamAName</li>
            <li>vs.</li>
            <li>TeamB: @Model.TeamBName</li>
            <li>Ergebnis: @Model.Ergebnis</li>
            <li>Gewinner: @Model.GewinnerName</li>
        </ul>
    </div>

</div>
</div>