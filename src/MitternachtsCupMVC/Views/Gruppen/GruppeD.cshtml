@model GruppenViewModel

@{
    
}

<h1>Gruppe D</h1>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Team-Nummer</th>
        <th>Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in Model.Teams)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
        </tr>
    }
    </tbody>
</table>

<h2>Spiele</h2>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Team A</th>
        <th>Team B</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in Model.GruppenSpiele)
    {
        <tr>
            <td>@item.TeamA.Name</td>
            <td>@item.TeamB.Name</td>
        </tr>
    }
    </tbody>
</table>