<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MitternachtsCupMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MitternachtsCupMVC.styles.css" asp-append-version="true" />
</head>
<style>
    body {
        background: linear-gradient(to bottom, #ffbf00, #ff9100); /* Gelb zu Orange Farbverlauf */
        background-size: cover;
        background-repeat: no-repeat;
        min-height: 100vh;
        margin: 0; /* Setzt den Körperrand auf 0, um unerwünschte Ränder zu entfernen */
        display: flex;
        flex-direction: column;
    }

    header {
    background-color: inherit; /* Erbt die Hintergrundfarbe von body */
    
    padding: 15px; /* Optional: Füge etwas Polsterung hinzu, um den Header zu gestalten */
    }

    footer {
        background-color: inherit; /* Erbt die Hintergrundfarbe von body */
        background-color: rgba(255, 255, 255, 0.8); /* 0.8 entspricht einer Opazität von 80% */
    }
    /* Stile für alle Tabellen */
    table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px; /* Optional: Abstand zwischen Tabellen */
    }

    /* Stile für Tabellenüberschriften (thead) */
    thead {
    background-color: #ffffff; /* Weißer Hintergrund für Überschriften */
    }

    /* Stile für Tabellenzeilen (tbody) */
    tbody {
    background-color: #ffffff; /* Weißer Hintergrund für Tabellenzeilen */
    }

    /* Stile für Tabellenzellen */
    td, th {
    padding: 8px; /* Optional: Innenabstand für Zelleninhalt */
    border: 1px solid #dddddd; /* Optional: Rahmendefinition für Zellen */
    }

    /* Optional: Hervorhebung der Zeile bei Hover-Effekt */
    tbody tr:hover {
    background-color: #f5f5f5; /* Hervorhebungsfarbe beim Überfahren mit dem Mauszeiger */
    }
</style>


<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="https://www.ttbw.de/typo3conf/ext/ttde/Resources/Public/Images/ttvbw-logo.png" alt="Logo" height="43" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Team" asp-action="Index">Alle Teams</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Turnierplan" asp-action="Index">Turnierplan</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="GruppenPhase" asp-action="Index">Gruppen</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="KoPhase" asp-action="Index">KO-Phase</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MitternachtsCupMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
